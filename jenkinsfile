pipeline {
    agent any
    parameters {
        string(name: 'oc_login_command', description: 'Please enter oc login command with --insecure-skip-tls-verify flag.')
    }
    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    try {
                        sh '''
                        apt-get update
                        apt-get install python3-setuptools ca-certificates
                        apt-get -y install git
                        curl https://bootstrap.pypa.io/get-pip.py -o get-pip.py
                        python3 get-pip.py 
                        python3 -m pip install ansible junit_xml pymongo xmljson jmespath kubernetes openshift
                        '''
                    } catch (err) {
                        echo err.getMessage()
                        echo "Error detected, but we will continue."
                    }
                }
            }
        }
        stage('Clone MAS Repo') {
            steps {
                script { 
                    try {
                        sh "git pull https://github.com/ibm-mas/ansible-devops.git"                    
                    } catch (err) {
                        echo err.getMessage()
                        echo "Error detected, but we will continue."
                    }
                }
            }
        }
         stage('Build Collection') {
            steps {
                sh '''
                    #export PATH=$PATH:/var/lib/jenkins/.local/bin
                    cd ansible-devops/ibm/mas_devops
                    ansible-galaxy collection build
                    ansible-galaxy collection install ibm-mas_devops-*.tar.gz --ignore-certs --force
                    rm ibm-mas_devops-*.tar.gz

                '''
            }
        }
        stage('OC login') {
            steps {
                sh '''
                    ${oc_login_command}
                '''
            }
        }
        stage('ansible oneclick_core') {
            steps {
                sh '''
                echo "starting cp4d Installation...."
                #export PATH=$PATH:/var/lib/jenkins/.local/bin
                cd ansible-devops/ibm/mas_devops
                export ARTIFACTORY_USERNAME="pmqcloud@us.ibm.com"
                export ARTIFACTORY_TOKEN="eyJ2ZXIiOiIyIiwidHlwIjoiSldUIiwiYWxnIjoiUlMyNTYiLCJraWQiOiI1Z0dyZUE3SUk1NWNZelJDSmVHcDJXV01YSnV2SjJvWUNfeVcwNnM5WFQwIn0..aXqWKykbkhVuETZKz4PJnLiV8YsgzGV5jyRRCJSTXay6Nbqac_ROK9InhkM6B5__6m0rzhvu5UlERqsIK5kqr6t69Zh4jZ5X0uz2ftfz3g8QdcoBQFFFPam5IDgbOykWvp8yv7P6V9_NnypV4zJQye8BlBtUUjfjCh_LPn1qJCviPHYXaC_BWhaGq57PZetpWtP9jDbEJwRlY48pipvMcspHlO_mB0tdi3lSOh9CKeQ-x00X2UHltPqtxLa9jTckn9UoJiaenMo8foQ6QqF29NYV5cewtVlhvP822KpcTR4AcXM-w3bq-D6GDGNDiiLZwKeRmcGcIIIIQdz2A81V9g"
                export ARTIFACTORY_APIKEY="eyJ2ZXIiOiIyIiwidHlwIjoiSldUIiwiYWxnIjoiUlMyNTYiLCJraWQiOiI1Z0dyZUE3SUk1NWNZelJDSmVHcDJXV01YSnV2SjJvWUNfeVcwNnM5WFQwIn0..aXqWKykbkhVuETZKz4PJnLiV8YsgzGV5jyRRCJSTXay6Nbqac_ROK9InhkM6B5__6m0rzhvu5UlERqsIK5kqr6t69Zh4jZ5X0uz2ftfz3g8QdcoBQFFFPam5IDgbOykWvp8yv7P6V9_NnypV4zJQye8BlBtUUjfjCh_LPn1qJCviPHYXaC_BWhaGq57PZetpWtP9jDbEJwRlY48pipvMcspHlO_mB0tdi3lSOh9CKeQ-x00X2UHltPqtxLa9jTckn9UoJiaenMo8foQ6QqF29NYV5cewtVlhvP822KpcTR4AcXM-w3bq-D6GDGNDiiLZwKeRmcGcIIIIQdz2A81V9g"
                export IBM_ENTITLEMENT_KEY=${MAS_ENTITLEMENT_KEY}
                export SLS_LICENSE_ID="0242ac110002"
                export SLS_LICENSE_FILE="/home/jigar/authorized_entitlement.lic"
                ansible-playbook playbooks/cp4d.yml
            '''
            }
        }
    }
}
